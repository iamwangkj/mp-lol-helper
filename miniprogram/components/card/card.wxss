.card {
  width: 688rpx;
  height: 400rpx;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 30rpx;
  border-radius: .5em;
  overflow: hidden;
}

.card-bg {
  width: 100%;
  height: 100%;
}

.card-name-wrapper {
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  border-radius: 10rpx;
  display: inline-flex;
  flex-direction: column;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.card-name-wrapper .main-name {
  font-size: 1.1em;
}

.dots-wrapper {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}

.dots {
  display: flex;
}

.dot-item {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 0 5rpx;
}
