.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 273rpx;
}

.region-name {
  width: 100%;
  font-size: 52rpx;
  font-weight: bold;
  text-align: center;
  background: linear-gradient(to bottom, #ad8e4e, #765629);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  padding: .5em 0;
}

