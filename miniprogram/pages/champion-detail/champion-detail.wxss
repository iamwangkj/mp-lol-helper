.champion-bg {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
}


.champion-wrapper {
  padding: 44rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.champion-avator {
  width: 200rpx;
  height: 200rpx;
  border: 2px solid #33ffff;
  border-radius: 50%;
  box-shadow: 0 0 50rpx 2rpx #33ffff;
  margin-bottom: 50rpx;
  overflow: hidden;
}

.champion-avator image {
  width: 100%;
  height: 100%;
}


.champion-name {
  /* color: #fff; */
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

.champion-name-cn {
  line-height: 2em;
}

.champion-quote {
  color: #33ffff;
  padding: 0 80rpx;
  margin: 50rpx 0;
}

.champion-short {
  box-sizing: border-box;
  width: 100%;
  min-height: 500rpx;
  margin-top: 20rpx;
  padding: 40rpx 35rpx;
  border-radius: 10rpx;
  border: 1rpx solid #33ffff;
  background-color: rgba(0, 51, 102, 0.4);
  line-height: 1.6;
}

.read-more {
  color: #33ffff;
  text-align: right;
  text-decoration: underline;
}